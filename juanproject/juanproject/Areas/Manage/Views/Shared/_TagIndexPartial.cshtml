@model IEnumerable<Tag>
@{
    int count = (ViewBag.PageIndex - 1) * 5;
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>

            <th scope="col">Status</th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Tag tag in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@tag.Name</td>
                <td style="color:@(tag.IsDeleted ? "red":"green")">@(tag.IsDeleted ? "DeActive":"Active")</td>
                <td>

                    <a class="btn btn-warning" asp-action="Update" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex" asp-route-id="@tag.Id">Update</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
